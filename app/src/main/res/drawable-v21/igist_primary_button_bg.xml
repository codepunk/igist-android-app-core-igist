<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">

        <shape
            android:shape="rectangle">

            <corners
                android:radius="@dimen/size_standard"/>

            <solid
                android:color="@color/colorPrimaryDisabled"/>

            <stroke
                android:width="2dp"
                android:color="@color/colorPrimaryDarkDisabled"/>

        </shape>

    </item>

    <item>

        <ripple
                android:color="@color/colorPrimaryDark">

            <item>

                <shape
                    android:shape="rectangle">

                    <corners
                        android:radius="@dimen/size_standard"/>

                    <solid
                        android:color="@color/colorPrimary"/>

                    <stroke
                        android:width="2dp"
                        android:color="@color/colorPrimaryDark"/>

                </shape>

            </item>

        </ripple>

    </item>

</selector>
