<resources>

    <style name="AppThemeBase" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="IgistTextView" parent="android:Widget.TextView">
        <item name="android:shadowColor">@color/colorAccentPink</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/igist_text_size</item>
        <item name="fontFamily">@font/electro</item>
    </style>

    <style name="IgistTextViewSm" parent="IgistTextView">
        <item name="android:textSize">@dimen/igist_text_size_s</item>
    </style>

    <style name="IgistBetaKeyEdit" parent="android:Widget.EditText">
        <item name="android:background">@drawable/igist_beta_key_edit_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/beta_key_beta_key</item>
        <item name="android:inputType">textCapCharacters|textVisiblePassword|textNoSuggestions</item>
        <item name="android:minHeight">@dimen/size_big_widget</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/igistBetaKeyEditForeground</item>
        <item name="android:textColorHint">@color/igistBetaKeyEditForeground</item>
        <item name="android:textSize">@dimen/igist_text_size</item>
        <item name="fontFamily">@font/electro</item>
    </style>

    <style name="IgistPrimaryButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/igist_primary_button_bg</item>
        <item name="android:minHeight">@dimen/size_big_widget</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/igist_text_size</item>
        <item name="fontFamily">@font/electro</item>
    </style>

</resources>
