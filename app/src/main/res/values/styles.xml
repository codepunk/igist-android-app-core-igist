<resources>

    <style name="AppThemeBase" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="IgistTextView" parent="android:Widget.TextView">
        <item name="android:shadowColor">@color/colorAccentPink</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/igist_text_size</item>
        <item name="fontFamily">@font/electro</item>
    </style>

    <style name="IgistTextViewSm" parent="IgistTextView">
        <item name="android:textSize">@dimen/igist_text_size_s</item>
    </style>

</resources>
